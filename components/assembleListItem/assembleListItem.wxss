/* components/assembleListItem/assembleListItem.wxss */

.assemble_list_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.assemble_list_item_img {
  width: 72rpx;
  height: 72rpx;
  background: #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
}

.assemble_list_item_content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.assemble_list_item_content_title {
  font-size: 24rpx;
  color: #353535;
}

.assemble_list_item_content_bottom {
  font-size: 24rpx;
  color: #b2b2b2;
}

.assemble_list_item_content_bottom text {
  color: #ff8d72;
}

.assemble_list_item_btn {
  width: 120rpx;
  height: 48rpx;
  text-align: center;
  color: #fff;
  box-shadow: 0px 10rpx 20rpx 0px rgba(254, 143, 113, 0.1);
  border-radius: 24rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  background: linear-gradient(-90deg, rgba(254, 143, 113, 1), rgba(254, 203, 164, 1));
}