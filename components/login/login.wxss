.login_modal {
  width: 440rpx;
  height: 324rpx;
  position: fixed;
  background-color: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
  border-radius: 12rpx;
}

.login_modal .icon {
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  border: 4rpx solid #fe8f71;
  padding: 10rpx;
}

.login_modal .title {
  font-size: 28rpx;
  color: #353535;
  margin-top: 20rpx;
}

.login_modal .login_btn {
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(90deg, rgba(254, 203, 164, 1), rgba(254, 143, 113, 1));
  box-shadow: 0px 8px 16px 0px rgba(254, 143, 113, 0.2);
  border-radius: 30px;
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #fff;
}
