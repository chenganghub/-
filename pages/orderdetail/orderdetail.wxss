.order {
  padding: 30rpx;
}

.detailcontainer .logistics {
  height: 140rpx;
  background-repeat: no-repeat;
  background-size: 100% auto;
}

.logistics_btn {
  width: 140rpx;
  height: 48rpx;
  border-radius: 24rpx;
  border: 1px solid #fff;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.orderimg {
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;

}

.bcode {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-top: 30rpx;
}

.bcode canvas {
  width: 580rpx;
  height: 150rpx;
  position: absolute;
  top: -600rpx;
}

.bcodeimg {
  width: 580rpx;
  height: 150rpx;
}

.order .orderhead {
  border-left: 8rpx solid #fe8f71;
  padding-left: 12rpx;
  font-size: 28rpx;
  line-height: 1;
  margin-bottom: 20rpx;
}

.order .orderhead text:nth-child(1) {
  margin-right: 20rpx;
}

.order .statecontent {
  color: #f5d066;
}

.order .orderitem {
  font-size: 24rpx;
  color: #999;
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.order .orderitem text:nth-child(1) {
  margin-right: 16rpx;
}

.address {
  display: flex;
  background: #fff;
  padding: 30rpx;
  border-radius: 0px 0px 20rpx 20rpx;
}

.address .address_detail {
  line-height: 1;
}

.address .user_name {
  font-size: 28rpx;
  font-weight: bold;
}

.address .user_phone {
  font-size: 24rpx;
}

.address .address_txt {
  font-size: 24rpx;
  color: #999;
  margin-top: 24rpx;
}

.address .location_icon {
  width: 22rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.item {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 30rpx 0;
  border-radius: 20rpx;
}

.item .topi {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.topi text {
  font-size: 27rpx;
}

.goods .goodsitem {
  padding-bottom: 30rpx;
}

.goods .thumbimg {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.goodsinfo {
  width: 100%;
  font-size: 24rpx;
}

.goodsinfo .word {
  width: 320rpx;
}
  .good_sku{
