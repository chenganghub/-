}

.ginfo {
  font-size: 24rpx;
  color: #333;
  text-align: right;
}

.goods .ginfo .t2 {
  margin-top: 12rpx;
}

.goods .ginfo .t3 {
  font-size: 28rpx;
}

.goods .cart {
  position: absolute;
  right: -8rpx;
  bottom: 0rpx;
  width: 7vw;
  height: 7vw;
  text-align: center;
  background: #ddd;
  border-radius: 50%;
}

.goods .cart image {
  width: 5vw;
  height: 5vw;
  padding-top: 1vw;
}

.goods .desc {
  width: 100vw;
  padding: 10rpx 0;
  display: flex;
  justify-content: flex-start;
}

.goods .desc text {
  font-size: 28rpx;
  color: #888;
}

.goods input {
  font-size: 26rpx;
}

.btm {
  width: 94vw;
  background: #fff;
  padding: 20rpx 3vw;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.btm view {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}

.btm view text:not(:first-child) {
  margin-top: 5rpx;
}

.btm text {
