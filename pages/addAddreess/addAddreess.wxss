page{
  min-height: 100vh;
  background: #f5f5f5;
  width: 100vw;
  overflow-x: hidden;
  padding-top: 20rpx;
}

.myaddress{
  display: flex;
  align-items: center;
  width: 100vw;
  background: #fff;
padding: 35rpx 0;
}
.myaddress image{
  width: 40rpx;
  height: 40rpx;
  margin:0 30rpx;
}

.myaddress text{
  font-size: 30rpx;

}
.wrap{
  display: flex;
  flex-direction: column;
  width: 100vw;
  background: #fff;
  padding: 10rpx 0;
  margin-top: 25rpx;
  align-items: center;
}
.wrap .item{
display: flex;
width: 94vw;
align-items: center;
padding: 24rpx 0;
border-bottom: 1rpx solid #ddd;
}
.wrap .item.r{
  padding: 32rpx 0;
}
.wrap .item:last-child{
  border-bottom: none;
  }
  .wrap .item view{
    width: 25vw;
    font-size: 30rpx;
  }
  .wrap .item input{
    font-size: 28rpx;
    width: 60vw;
  }
.wrap .item image{
  width: 40rpx;
  height: 40rpx;
}
picker{
  width: 55vw;
}
.wrap .item .picker{
  width: 100%;
}
.switch{
  position: relative;
  left:54vw;
}
/*swtich整体大小及背景色*/
.wx-switch-input{
    width:82rpx !important;
    height:36rpx !important;
   

}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:80rpx !important;
    height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 40rpx !important;
    height: 36rpx !important;
}
.save{
  width: 95vw;
  height: 80rpx;
  border-radius: 8rpx;
  margin-top: 25rpx;
  margin-left: 2.5vw;
  background: #86ce60;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}