.ordercontainer {
  height: 100vh;
}

.tabbar {
  background: #fff;
  line-height: 88rpx;
  border-radius: 0 0 20rpx 20rpx;
  padding: 0 50rpx;
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.tabbar view {
  font-size: 28rpx;
  color: #999;
}

.tabbar .check {
  border-bottom: 5rpx solid #FECBA4;
  color: #FECBA4;
}

.nolist {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 108rpx;
}

.nolist .img {
  width: 35vw;
  height: 35vw;
  background: #e0e0e0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nolist .img image {
  width: 15vw;
  height: 15vw;
}

.nolist .t1 {
  font-size: 30rpx;
  margin-top: 25rpx;
}

.nolist .t2 {
  font-size: 22rpx;
  color: #888;
  margin-top: 5rpx;
}

.nolist .btn {
  border-radius: 10rpx;
  border: 1rpx solid #333;
  font-size: 26rpx;
  margin-top: 35rpx;
  padding: 12rpx;
}

.wrap {
  padding: 108rpx 20rpx 20rpx;
  box-sizing: border-box;
}

.wrap .item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.wrap .item .top {
  margin-bottom: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.wrap .item .top .state {
  color: #333;
}

.wrap .goods .goodsitem {
  width: 480rpx;
}

.wrap .goods .good_name {
  width: 320rpx;
  font-size: 24rpx;
}
.wrap .goods .good_sku{
  margin-top:18rpx ;
  font-size:24rpx;
  color:rgba(178,178,178,1);
}
.wrap .goods .good_sku text:nth-last-child(1){
margin-left: 10rpx;
}
.wrap .goods image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 15rpx;
}

.wrap .goods .count {
  font-size: 20rpx;
  color: #999;
  text-align: right;
}

.wrap .goods .price_tag {
  font-size: 24rpx;
  color: #333;
}

.wrap .goods .price_tag .price {
  font-size: 28rpx;
}

.goods .count image {
  width: 5vw;
  height: 5vw;
  margin-left: 4vw;
}

.wrap .goods .word {
  width: 70vw;
  display: flex;
  flex-direction: column;
}

.wrap .item .btm {
  font-size: 24rpx;
  margin-top: 30rpx;
  color: #999;
}

.wrap .item .btm .btns {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.wrap .item .btm .btns .cancel {
  width: 140rpx;
  text-align: center;
  border-radius: 24rpx;
  border: 1rpx solid #aaa;
  margin-left: 20rpx;
  color: #333;
  line-height: 48rpx;
}

.wrap .item .btm .btns .pay {
  width: 140rpx;
  text-align: center;
  border-radius: 24rpx;
  border: 1rpx solid #FECBA4;
  color: #FECBA4;
  line-height: 48rpx;
  margin-left: 20rpx;
}

.wrap .item .btm .btns .confirm {
  width: 120rpx;
  text-align: center;
  border-radius: 24rpx;
  border: 1rpx solid #FECBA4;
  color: #FECBA4;
  line-height: 48rpx;
  margin-left: 20rpx;
}

.wrap .item .btm text {
  color: #000;
  font-weight: bolder;
  font-size: 30rpx;
}

.wrap .goods .word text {
  font-size: 25rpx;
}

.wrap .goods .word .t2 {
  color: #888;
}

.wrap .goods .word .t3 {
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.wrap .goods .word .coupon {
  font-size: 20rpx;
  color: #fff;
  margin-top: 10rpx;
  background: #ff5850;
  border-radius: 10rpx;
  padding: 0.6vw;
  width: 12vw;
  text-align: center;
}

.wrap .goods .word .coupon.s {
  background: goldenrod;
}

.cancel_modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 3;
}

.cancel_modal .modal_title {
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
}

.cancel_modal .reason_list {
  padding: 30rpx 40rpx;
}

.cancel_modal .reason_list .reason_item {
  font-size: 28rpx;
  color: #363636;
  margin-bottom: 40rpx;
  line-height: 1;
}

.cancel_modal .reason_list .reason_item:last-child {
  margin-bottom: 0;
}

.cancel_modal .reason_list .label_radio {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  box-sizing: border-box;
}

.cancel_modal .reason_list .checked {
  border: 6rpx solid #FE8F71;
}

.cancel_modal .reason_input {
  width: 520rpx;
  height: 120rpx;
  background-color: #f5f5f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin: 0 auto 40rpx;
}

.cancel_modal .modal_btn_wrap {
  line-height: 98rpx;
  border-top: 1px solid #e5e5e5;
  text-align: center;
  font-size: 32rpx;
  color: #363636;
}

.cancel_modal .modal_btn_wrap .confirm_btn {
  color: #FECBA4;
  border-left: 1px solid #e5e5e5;
}

.refund {
  width: 140rpx;
  text-align: center;
  border-radius: 24rpx;
  border: 1rpx solid #aaa;
  margin-left: 20rpx;
  color: #333;
  line-height: 48rpx;
}