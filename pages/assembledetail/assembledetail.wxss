.sizewrap{
width: 100vw;
height: 100vh;
overflow: hidden;
position: fixed;
top: 0;
left: 0;
z-index: 10;
}
.sizewrap .mask{
width: 100vw;
height: 100vh;
position: absolute;
top: 0;
left: 0;
z-index: 11;
background: rgba(0, 0, 0, 0.5)
}

.sizewrap .white{
width: 100vw;
height: 440rpx;
position: fixed;
bottom: 0;
background: #fff;
z-index: 12;
}
@keyframes sizewrap 
{
from {height:0px;bottom:0}
to {height:400rpx;bottom:0} 
}
