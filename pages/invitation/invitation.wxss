/* pages/invitation/invitation.wxss */
.container{
  background: #f5f5f5;
}
.invitationHeader{
  width: 100%;
  height: 300rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: white;
}
.Header_top{
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  height: 42%;
  align-items: center;
}
.number{
  font-size: 28rpx;
}
.top_text{
  display: flex;
  align-items: flex-end;
  height: 90%;
  overflow: hidden;
}
.top_text text:nth-of-type(1){
  font-size: 50rpx;
  line-height: 40rpx;
}
.top_text text:nth-of-type(2){
  font-size: 24rpx;
  line-height: 30rpx;
}
.Header_bottom{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
}
.invitationlist{
  width: 100%;
}
.list_header{
  width: 100%;
  height: 90rpx;
  display: flex;
  margin: 18rpx 0;
  background: white;
}
.list_header text{
  color: #676767;
  display: block;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
}
.portrait{
  width: 20%;
  height: 100%;
}
.account{
  width: 40%;
  height: 100%;
}
.registrationdate{
  width: 40%;
  height: 100%;
}
.list{
  width: 100%;
  height: 90rpx;
  background: white;
  display: flex;
  font-size: 28rpx;
  border-bottom: 2rpx solid #E0E0E0;
}
.head{
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.head image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.phone{
  width: 40%;
  height: 100%;
  text-align: center;
  line-height: 90rpx;
}
.date{
  width: 40%;
  height: 40%;
  text-align: center;
  line-height: 90rpx;
}
.btmword{
  
  width: 100%;
  /* margin:20rpx 0; */
  bottom: 0;
  height: 50rpx;
 text-align: center;
 margin-top: 20rpx;
 color: #999;
 font-size: 28rpx;
}