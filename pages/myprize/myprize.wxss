/* pages/myprize/myprize.wxss */

.container {
  text-align: center;
  width: 100%;
  height: 108vh;
  overflow: hidden;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  top: -8vh;
}

.Header_top {
  font-size: 28rpx;
  font-weight: bold;
  color: #fe8f71;
  margin-top: 24vh;
  margin-bottom: 32rpx;
}

.btn_group {
  padding: 20rpx 72rpx;
}

.common_btn {
  width: 260rpx;
  height: 108rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  line-height: 88rpx;
}

.invitationList {
  text-align: center;
  margin: 0rpx 80rpx 20rpx 80rpx;
  height: 52vh;
  overflow: auto;
  width: auto;
}

.list_header {
  display: flex;
  justify-content: center;
  margin: 0rpx 80rpx;
  height: 72rpx;
  background: rgba(254, 203, 164, 0.4);
  border-radius: 8px;
}

.list_header text {
  color: #fe8f71;
  display: block;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  flex: 1;
}

.list_header text:last-child {
  width: 20%;
  padding: 0 10rpx;
}

.list {
  width: 100%;
  height: 90rpx;
  background: white;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #e5e5e5;
}

.list text {
  font-size: 24rpx;
  color: #333;
  width: 40%;
  text-align: center;
  line-height: 90rpx;
  flex: 1;
}

.head {
  color: #b2b2b2;
}

.list .head .unUsed {
  display: inline-block;
  width: 80rpx;
  color: #fe8f71;
  padding: 5rpx 10rpx;
  border: 1px solid #fe8f71;
  border-radius: 4px;
  line-height: 40rpx;
  margin: 20rpx;
}

.list .head .used {
  display: inline-block;
  width: 80rpx;
  color: #b2b2b2;
  padding: 5rpx 10rpx;
  border: 1px solid #ccc;
  border-radius: 4px;
  line-height: 40rpx;
  margin: 20rpx;
}
