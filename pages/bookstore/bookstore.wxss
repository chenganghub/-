page {
  background: #fff;
}
.header_box {
  font-size: 36rpx;
  color: #353535;
  text-align: center;
  margin-top: 30rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
  height: 140rpx;
  line-height: 140rpx;
}

.bookstore_container .header {
  display: block;
  width: 28rpx;
  height: 36rpx;
  display: inline-block;
  margin-right: 14rpx;
  position: relative;
  top: 4rpx;
}

.bookstore_container .book_wrap {
  padding: 80rpx 90rpx 0;
}

.bookstore_container .book_wrap .book_item {
  padding: 50rpx 70rpx 50rpx 0;
  border-right: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.bookstore_container .book_wrap .book_item:nth-child(2n + 2) {
  border-right: none;
  border-bottom: 1px solid #f5f5f5;
  padding-left: 70rpx;
  padding-right: 0;
}

.bookstore_container .book_wrap .book_item:nth-child(1) {
  padding-top: 0;
}

.bookstore_container .book_wrap .book_item:nth-child(2) {
  padding-top: 0;
}

.bookstore_container .book_wrap .book_item:nth-last-child(1) {
  padding-bottom: 0;
  border-bottom: none;
}

.bookstore_container .book_wrap .book_item:nth-last-child(2) {
  padding-bottom: 0;
  border-bottom: none;
}

.bookstore_container .book_wrap .book_img {
  width: 214rpx;
  height: 271rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
  position: relative;
}

.bookstore_container .book_wrap .active .book_img {
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}
.bookstore_container .book_wrap .food_name {
  width: 40rpx;
  height: 152rpx;
  position: absolute;
  right: 32rpx;
  top: 30rpx;
  font-size: 30rpx;
  line-height: 32rpx;
  color: #b3b3b3;
  text-align: center;
  display: flex;
  align-items: center;
}

.bookstore_container .book_wrap .active .food_name {
  color: #fecba4;
}

.bookstore_container .book_wrap .book_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #353535;
  margin-top: 30rpx;
  line-height: 1;
}

.bookstore_container .book_wrap .book_detail {
  font-size: 24rpx;
  color: #b2b2b2;
  margin-top: 8rpx;
}

.bookstore_container .book_wrap .btn_arrow {
  width: 28rpx;
  height: 17rpx;
}

.bookstore_container .page_bottom {
  width: 100%;
  height: 175rpx;
}
