/* pages/myprize/myprize.wxss */

.container {
  text-align: center;
  width: 100%;
  height: 108vh;
  overflow: hidden;
  position: relative;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
  top: -8vh;
}
.Header_top {
  font-size: 28rpx;
  font-weight: bold;
  color: #fe8f71;
  margin-top: 24vh;
  margin-bottom: 32rpx;
}

.invitationList {
  text-align: center;
  margin: 0rpx 80rpx 20rpx 80rpx;
  height: 60vh;
  width: auto;
  overflow: auto;
}

.list_header {
  display: flex;
  margin: 0rpx 80rpx;
  height: 72rpx;
  background: rgba(254, 203, 164, 0.4);
  border-radius: 8px;
}
.list_header text {
  color: #fe8f71;
  display: block;
  text-align: left;
  line-height: 70rpx;
  font-size: 28rpx;
  width: 40%;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.list_header text:first-child {
  width: 20%;
  padding-left: 20rpx;
}

.list {
  width: 100%;
  height: 90rpx;
  background: white;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
}
.list text {
  font-size: 24rpx;
  color: #333333;
  width: 40%;
  text-align: left;
  line-height: 90rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.list text:first-child {
  width: 20%;
  padding-left: 20rpx;
}

.head {
  color: #b2b2b2;
}
