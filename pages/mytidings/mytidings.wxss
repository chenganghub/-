/* pages/mytidings/mytidings.wxss */
.tidingsList{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.tidings{
  width: 100%;
  height: 180rpx;
  /* background: pink; */
  border-bottom: 1px solid #F0EFEF;
  display: flex;
  align-items: center;
}
.headportrait{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  margin-left: 20rpx;
}
.name{
  font-size: 30rpx;
  font-weight:600;
  margin-top: 10rpx;
}
.tidingstitle{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.headportrait image{
  width: 100%;
  height: 100%;
}
.tidingscenter{
  display: flex;
  flex-direction: column;
  width: 480rpx;
}
.tidingscenter image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}
.date{
  display: flex;
  color: #B6B6B6;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.rightimg{
  width: 120rpx;
  height: 120rpx;
}