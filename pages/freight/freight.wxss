/* pages/freight/freight.wxss */
.container {
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  padding-bottom: 50rpx;
}
.freightHeader{
  width: 100%;
  height: 60rpx;
  background: white;
  font-size: 30rpx;
  line-height:60rpx;
  text-align: center;
  position: fixed;
  top: 0;
  font-weight: 600; 
}
.rules{
  width: 90%;
  height: 150rpx;
  background: white;
  margin: auto;
  margin-top: 60rpx;
  border-radius:20rpx; 
  padding: 10rpx 20rpx;
  margin-bottom: 0;
}
.rules text:nth-of-type(1){
  font-size: 28rpx;
  font-weight: 600
}
.rules text:nth-of-type(2){
  font-size: 24rpx;
  line-height: 30rpx;
}
 .mapText{
  margin-left: 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  height: 60rpx;
  line-height: 60rpx;
}
.maMap{
  height: 900rpx;
  width: 94%;
  margin: auto;
}