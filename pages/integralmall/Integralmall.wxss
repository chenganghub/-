/* pages/list/list.wxss */
.container{
  background: #F4F5F7;
}
.goodslist{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; 
  margin-top: 20rpx;
}
.good{
  width:44vw;
  padding: 2vw;
  background: white;
  border-radius:10rpx;
  margin-bottom: 10rpx;
}
.goodsimage{
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.goodsimage image{
  width: 100%;
  height: 100%;
}
.goodscontent{
  margin-left: 10rpx;
}
.goodstitle{
  font-size: 26rpx;
  font-weight: 600;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.price{
  color: #D95312;
  font-size: 28rpx;
  font-weight: 600;
}
.btmword{
  
  width: 100%;
  /* margin:20rpx 0; */
  bottom: 0;
  height: 50rpx;
 text-align: center;
 margin-top: 20rpx;
 color: #999;
 font-size: 28rpx;
}
.shoppingcart{
  pointer-events: none;
  height: 100%;
  width: 100%;
  position:absolute;
  right:0px;
  bottom:0px;
}
movable-view{
  pointer-events: auto;
  height: 100rpx;
  width: 100rpx;
  background: white;
  border-radius:50%; 
}
movable-view image{
  width: 60rpx;
  height:60rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.collectBox{
  height: 100rpx;
  width: 100rpx;
  background: pink;
}
.add_icon{
  width: 60rpx;
  height: 60rpx;
  margin-left: 19rpx;
  margin-top: 23rpx;
}
.cart{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 80rpx;
  right: 20rpx;
  background: white;
  border-radius:50%; 
  box-shadow: 2rpx 0rpx 10rpx -3rpx #2B2B2E;
}