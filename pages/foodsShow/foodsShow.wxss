page {
  background-color: #fff;
}

.showHeader {
  position: fixed;
  width: 100%;
  height: 88rpx;
  left: 0;
  top: 0;
  padding: 0 20rpx;
  background: white;
  box-sizing: border-box;
  z-index: 1;
}

.tab_item {
  width: 70rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 32rpx;
  color: #353535;
  font-weight: bold;
  margin-right: 40rpx;
  position: relative;
}

.tab_text {
  position: absolute;
  z-index: 2;
}

.active {
  width: 80rpx;
  font-size: 40rpx;
}

.active ::after {
  position: absolute;
  left: 0;
  bottom: 5rpx;
  width: 80rpx;
  height: 10rpx;
  content: '';
  z-index: -1;
  border-radius: 2px;
  background-color: #fecba4;
}

.btn {
  width: 74rpx;
  height: 88rpx;
  position: fixed;
  top: 0;
  right: 20rpx;
}

.headericon {
  width: 48rpx;
  height: 48rpx;
}

.showWrap {
  display: flex;
  margin-top: 88rpx;
  padding: 15rpx 20rpx;
}

.showList {
  width: 350rpx;
  margin: 0 10rpx;
}

.position_show {
  position: relative;
  overflow: hidden;
  margin-bottom: 4rpx;
  border-radius: 12rpx 12rpx 0 0;
  /* box-shadow: 0 0 8rpx #efefef; */
}

.wait {
  position: absolute;
  left: 0;
  top: 0;
  width: 110rpx;
  height: 50rpx;
  background: linear-gradient(-90deg, rgba(254, 143, 113, 1), rgba(254, 203, 164, 1));
  color: white;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 0 0 30rpx 0;
}

.show {
  background: white;
}

.topimg {
  width: 100%;
  display: block;
  border-radius: 12rpx;
}

.listText {
  padding: 10rpx 0;
  box-sizing: border-box;
}

.title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.user {
  display: flex;
  align-items: center;
  margin: 8rpx 0 10rpx 0;
  justify-content: space-between;
}

.headsculpture {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background: #999;
}

.userleft {
  display: flex;
  align-items: center;
}

.username {
  color: #888;
  font-size: 24rpx;
}

.fabulous {
  width: 100rpx;
  text-align: right;
}

.fabulous image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 7rpx;
  vertical-align: middle;
}

.fabulous text {
  font-size: 24rpx;
  color: #bdbdbd;
}

.img_wrap {
  max-height: 500rpx;
  overflow: hidden;
  border-radius: 12rpx;
}
