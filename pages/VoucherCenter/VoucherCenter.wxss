.container {
  background: #f5f5f5;
  padding-bottom: 50rpx;
  width: 100%;
}

.vouter {
  height: 200rpx;
  width: 92%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}

.right_top {
  margin-bottom: 20rpx;
}

.right_top_title {
  color: #888;
  font-size: 22rpx;
  text-align: center;
}

.right_top_progress {
  width: 140rpx;
  height: 10rpx;
  background: #ddd;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.right_top_progress view {
  background: #fe8f71;
  height: 100%;
  border-radius: 20rpx;
}

.voutercontent {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.left {
  width: 10%;
  height: 100%;
  visibility: hidden;
}

.first {
  font-size: 32rpx;
  font-weight: bold;
}

.second {
  font-size: 24rpx;
  display: inline-block;
  margin: 10rpx 0 0rpx 0;
  width: 250rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.vouter_time {
  text-align: right;
  width: 92%;
  margin: 10rpx auto;
}

.vouter_time .day {
  background: #fff;
  border-radius: 4rpx;
  border-top: 1px solid #ddd;
  font-size: 24rpx;
  padding: 4rpx;
}

.vouter_time>view text {
  background: #fff;
  border-radius: 4rpx;
  border-top: 1px solid #ddd;
  font-size: 24rpx;
  padding: 4rpx;
}

.vouter_time text:nth-child(1) {
  color: #353535;
}

.second.coupon {
  background: #fff;
  color: #fe8f71;
  font-size: 24rpx;
  width: 100rpx;
  border-radius: 14rpx;
  text-align: center;
  margin-right: 10rpx;
}

.third {
  font-size: 24rpx;
  opacity: 0.6;
}

.content_center {
  width: 60%;
  box-sizing: border-box;
  color: #fff;
}

.right {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right_content {
  width: 100%;
  height: 84%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333;
  position: relative;
}

.right_content_img {
  position: absolute;
  right: 8rpx;
  top: -4rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 1;
}

.right_content text {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.right_btn {
  width: 70%;
  height: 48rpx;
  text-align: center;
  color: white;
  font-size: 26rpx;
  line-height: 50rpx;
  background: linear-gradient(-90deg, rgba(254, 143, 113, 1), rgba(254, 203, 164, 1));
  border-radius: 24px;
  z-index: 100;
}

.isgot {
  background: #ccc;
}
