.sizewrap {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.sizewrap .mask {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
  background: rgba(0, 0, 0, 0.5);
}

.sizewrap .white {
  width: 100vw;
  min-height: 800rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 12;
  box-sizing: border-box;
}

@keyframes sizewrap {
  from {
    height: 0;
    bottom: 0;
  }

  to {
    height: 800rpx;
    bottom: 0;
  }
}

.sizewrap .top {
  display: flex;
  align-items: flex-start;
  padding: 0 20rpx 30rpx;
}

.sizewrap .thumb {
  width: 180rpx;
  height: 180rpx;
  margin-top: 30rpx;
}

.sizewrap .close {
  height: 20vw;
  display: flex;
  align-items: flex-start;
}

.sizewrap .close image {
  width: 36rpx;
  height: 36rpx;
  margin-top: 20rpx;
}

.sizewrap .topword {
  width: 455rpx;
  height: 100%;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 40rpx;
}

.sizewrap .topword text:nth-child(2) {
  font-size: 24rpx;
  line-height: 1;
  margin-top: 20rpx;
  color: #999;
}

.sizewrap .topword text:first-child {
  font-size: 40rpx;
  line-height: 1;
  color: #e8560f;
}

