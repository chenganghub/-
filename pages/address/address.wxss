.wrap .item .edit{
  width: 40rpx;
  height: 40rpx;
  margin-left: 15rpx;
}
.wrap .item .content{
  margin-left: 15rpx;
}
.wrap .item .content>text{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 76vw;
  display: block;
}
.wrap .item .content .top{
  width: 76vw;
  display: flex;
  justify-content: space-between;
}
.wrap .item .content .top text{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.wrap .item .content .top .defaultaddress{
  background: #f5d066;
  color:white;
  width:40rpx;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  text-align: center;
  margin-left: 15rpx;
}
