page{
  min-height: 100vh;
  background: #f5f5f5;
  width: 100vw;
  overflow-x: hidden;
  padding-top: 20rpx;
}
text{
  font-size: 28rpx;
}

.bottom{
  position: fixed;
  width: 100vw;
  height: 100rpx;
  font-size: 30rpx;
  color: #FE8F71;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 0;
  border-top: 1rpx solid #ddd;
  background: #fff;
}
.noaddress{
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #888;
}
.wrap{
background: #fff;
width: 100vw;
display: flex;
flex-direction: column;
}
.wrap .item{
display: flex;
align-items: center;
justify-content: space-between;
padding: 20rpx;
border-bottom: 1rpx solid #f5f5f5; 
}
.wrap .item:last-child{
  border-bottom: none; 
}
.wrap .item .correct{
  width: 37rpx;
  height: 35rpx;
}
/* .wrap .item .circle{
width: 33rpx;
height: 33rpx;
