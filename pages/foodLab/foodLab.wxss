/* pages/foodLab/foodLab.wxss */
page {
  background-color: #fff;
}
.foodlabheader {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 15rpx 30rpx 0 40rpx;
  box-sizing: border-box;
}

.foodlabheader .title {
  font-size: 42rpx;
  font-weight: bold;
  color: #353535;
}

.foodlabheader .info {
  font-size: 24rpx;
  color: #888888;
  margin-top: 20rpx;
  opacity: 0.8;
}

.foodlabheader .books {
  width: 92rpx;
  height: 200rpx;
}

.foodlabcontent {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: -30rpx;
}

.choice {
  margin: 0rpx 40rpx 30rpx;
}
.bg_box {
  position: absolute;
  width: 100%;
  height: 300rpx;
  background-size: 100% auto;
  top: -33rpx;
  right: -33rpx;
}
.homedishes {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 15rpx 40rpx;
}

.dishes {
  position: relative;
  width: 42vw;
  height: 400rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx #ececec;
  margin-bottom: 5vw;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  box-shadow: 0px 10px 30px 0px rgba(0, 0, 0, 0.12);
  border-radius: 60rpx 20rpx 20rpx 20rpx;
}

.img {
  width: 100%;
  height: 70%;
}

.arrow {
  width: 100rpx;
  height: 42rpx;
  background: rgba(254, 203, 164, 1);
  box-shadow: 0px 10rpx 20rpx 0rpx rgba(254, 143, 113, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  align-content: center;
  position: absolute;
  right: 3vw;
  bottom: 3vw;
}

.dishes text {
  position: absolute;
  font-size: 32rpx;
  margin-left: 30rpx;
  bottom: 11vw;
  color: rgba(102, 69, 31, 1);
}

.arrow image {
  width: 50rpx;
  height: 100%;
  margin-left: 25rpx;
}

.dishes .img {
  width: 40vw;
  height: 40vw;
  position: absolute;
  top: -8vw;
  right: -8vw;
  /* border-radius: 50%;
  border: 20rpx solid #fff;
  box-shadow: 0 10rpx 20rpx #eee8dc; */
}

.topbg {
  position: absolute;
  z-index: -1;
  top: 20rpx;
  width: 100vw;
  height: 21.7vw;
}
