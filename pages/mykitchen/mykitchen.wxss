  margin-top: 0;
  margin-bottom: 10rpx;
}
.wait{
  position: absolute;
  left: 0;
  top: 0;
  width: 110rpx;
  height: 50rpx;
  background: linear-gradient(-90deg,rgba(254,143,113,1),rgba(254,203,164,1));
  color: white;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 0 0 30rpx 0;
}
.waitnone{
