.showTitle{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  background: white;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
.littlebox{
  width: 12rpx;
  height: 35rpx;
  background: #E8C667;
}
.showTitle text{
  font-size: 34rpx;
  font-weight: 600;
}
.showTitle text:first-child{
  border-left: 12rpx solid #E8C667;
  padding-left: 10rpx;
}
.showTitle .title_right{
  font-size: 26rpx;
  color: #888;
  padding-right: 30rpx;
}
