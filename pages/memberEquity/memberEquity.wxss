/* pages/memberEquity/memberEquity.wxss */

.container {
  background: #f8f9fb;
  height: 100%;
  font-family: PingFang-SC-Regular;
}

/*  */

.container .container_box .container_box_content {
  background: #fff;
  width: 660rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  min-height: calc(100vh - 260rpx);
  z-index: 99;
  top: -20rpx;
}

.container .container_box .container_box_content image {
  width: 660rpx;
  position: absolute;
  left: 0;
  bottom: -150rpx;
  /* transform: translateY(100rpx) */
}

.container .container_box .container_box_content .container_box_content_title {
  margin: 38rpx auto 30rpx;
  text-align: center;
  color: #353535;
  font-size: 28rpx;
}

.container .container_box .container_box_content .container_box_content_table {
  display: flex;
  justify-content: space-around;
  background: #fcf9fc;
}

.container
  .container_box
  .container_box_content
  .container_box_content_table
  .container_box_content_table_column {
  flex: 1;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.container
  .container_box
  .container_box_content
  .container_box_content_table
  .container_box_content_table_column
  + .container_box_content_table_column {
  margin-left: -1rpx;
}

.container
  .container_box
  .container_box_content
  .container_box_content_table
  .container_box_content_table_column
  .item
  + .item {
  margin-top: -1rpx;
}

.container
  .container_box
  .container_box_content
  .container_box_content_table
  .item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  justify-content: center;
  font-size: 24rpx;
  border: 1rpx solid #eee;
  color: #353535;
  overflow: hidden;
}

.container
  .container_box
  .container_box_content
  .container_box_content_table
  .item.title {
  font-size: 26rpx;
  color: #353535;
  font-weight: bold;
  overflow: hidden;
}

.container
  .container_box
  .container_box_content
  .container_box_content_table
  .container_box_content_table_column.active
  .item {
  background: rgba(245, 207, 102, 0.2);
}
