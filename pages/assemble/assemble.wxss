.sizewrap {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.sizewrap .mask {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
  background: rgba(0, 0, 0, 0.5);
}

.sizewrap .white {
  width: 100vw;
  /* min-height: 800rpx; */
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 12;
  box-sizing: border-box;
}

@keyframes sizewrap {
  from {
    height: 0;
    bottom: 0;
  }

  to {
    max-height: 800rpx;
    bottom: 0;
  }
}

.sizewrap .top {
  display: flex;
  align-items: flex-start;
  padding: 0 20rpx 30rpx;
}

.sizewrap .thumb {
  width: 180rpx;
  height: 180rpx;
  margin-top: 30rpx;
}

.sizewrap .close {
  height: 20vw;
  display: flex;
  align-items: flex-start;
}

